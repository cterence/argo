{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "pin",
        "digest",
        "patch",
        "minor"
      ],
      "ignoreTests": true,
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackageNames": [
        "lscr.io/linuxserver/calibre-web"
      ],
      "versioning": "regex:^(?P<major>\\d)\\.(?P<minor>0|[1-9]\\d*)\\.(?P<patch>0|[1-9]\\d*)(?:-(?P<prerelease>(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+(?P<buildmetadata>[0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
    }
  ],
  "ignorePaths": [
    "**/atlantis/**",
    "**/blackbox-exporter/**"
  ]
}
